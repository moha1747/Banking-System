<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0"
         metadata-complete="true">

  <description>Banking Application</description>
  <display-name>Banking-System</display-name>

  <welcome-file-list>
    <welcome-file>welcome.htm</welcome-file>
  </welcome-file-list>

  <request-character-encoding>UTF-8</request-character-encoding>

  <!-- Servlet Definitions -->
  <servlet>
    <servlet-name>AccountBalances</servlet-name>
    <servlet-class>AccountBalances</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>CreateMainAccount</servlet-name>
    <servlet-class>CreateMainAccount</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>CreateBalanceProcessor</servlet-name>
    <servlet-class>CreateBalanceProcessor</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>CreateBalance</servlet-name>
    <servlet-class>CreateBalance</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>CloseBalance</servlet-name>
    <servlet-class>CloseBalance</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>UsersDashboard</servlet-name>
    <servlet-class>UsersDashboard</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>Logout</servlet-name>
    <servlet-class>Logout</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>Transfer</servlet-name>
    <servlet-class>Transfer</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>TransferFunds</servlet-name>
    <servlet-class>TransferFunds</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>History</servlet-name>
    <servlet-class>History</servlet-class>
  </servlet>

  <!-- Servlet Mappings -->
  <servlet-mapping>
    <servlet-name>AccountBalances</servlet-name>
    <url-pattern>/AccountBalances</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>CreateMainAccount</servlet-name>
    <url-pattern>/CreateMainAccount</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>CreateBalanceProcessor</servlet-name>
    <url-pattern>/CreateBalanceProcessor</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>CreateBalance</servlet-name>
    <url-pattern>/CreateBalance</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>CloseBalance</servlet-name>
    <url-pattern>/CloseBalance</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>UsersDashboard</servlet-name>
    <url-pattern>/UsersDashboard</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>Logout</servlet-name>
    <url-pattern>/Logout</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>Transfer</servlet-name>
    <url-pattern>/Transfer</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>TransferFunds</servlet-name>
    <url-pattern>/TransferFunds</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>History</servlet-name>
    <url-pattern>/History</url-pattern>
  </servlet-mapping>

</web-app>
